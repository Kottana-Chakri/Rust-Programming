//Write a program to make a calculator using Match Expression

fn main() {
    println!("Enter a day number (1 to 7) representing Monday to Sunday:");
    let day = 1;

    let day_name = match day {
        1 => "Monday",
        2 => "Tuesday",
        3 => "Wednesday",
        4 => "Thursday",
        5 => "Friday",
        6 => "Saturday",
        7 => "Sunday",
        _ => unreachable!(), 
    };
    println!("You selected: {}", day_name);
    }
